{
  "rewrites": [
    {
      "source": "/openmrs/spa",
      "destination": "/openmrs/spa/index.html"
    },
    {
      "source": "/openmrs/spa/**",
      "destination": "/openmrs/spa/index.html"
    }
  ],
  "headers": [
    {
      "source": "/openmrs/spa/**/*.@(js|css)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/openmrs/spa/**/*.@(html|json)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
