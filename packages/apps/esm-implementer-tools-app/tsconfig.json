{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "es2015.promise",
      "es2016.array.include",
      "es2018",
      "es2020",
      "es2022"
    ]
  },
  "include": ["src/**/*"]
}
