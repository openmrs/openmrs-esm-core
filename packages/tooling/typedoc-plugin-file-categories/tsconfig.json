{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ES2020",
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "lib": ["es2020"]
  },
  "include": ["src/**/*"]
}
