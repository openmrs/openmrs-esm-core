{
  "name": "@openmrs/esm-app-shell",
  "version": "4.0.0",
  "license": "MPL-2.0",
  "main": "dist/openmrs.js",
  "scripts": {
    "start": "npm run watch",
    "start:empty": "cross-env OMRS_ESM_CORE_APPS_DIR='' OMRS_ESM_IMPORTMAP_URL=\"/openmrs/spa/other/importmap.json\" yarn watch --no-open",
    "start:cypress-fixtures": "cd cypress/fixtures/ && webpack serve --port 9081",
    "start:for-cypress": "concurrently 'yarn start:empty --port 9080' 'yarn start:cypress-fixtures'",
    "test": "start-server-and-test start:for-cypress http://localhost:9080/openmrs/spa/ cy:run",
    "test:watch": "start-server-and-test start:for-cypress http://localhost:9080/openmrs/spa/ cy:open",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "watch:ref": "cross-env OMRS_ESM_IMPORTMAP_URL=\"https://spa-modules.nyc3.digitaloceanspaces.com/import-map.json\" OMRS_CONFIG_URLS=\"https://spa-modules.nyc3.digitaloceanspaces.com/@openmrs/config/config.json\" OMRS_OFFLINE=\"disable\" NODE_ENV=\"development\" webpack serve --mode development",
    "build:production": "cross-env OMRS_ESM_IMPORTMAP_URL=\"https://spa-modules.nyc3.digitaloceanspaces.com/import-map.json\" OMRS_CONFIG_URLS=\"https://spa-modules.nyc3.digitaloceanspaces.com/@openmrs/config/config.json\" OMRS_OFFLINE=\"enable\" NODE_ENV=\"production\" webpack --mode production",
    "build:development": "cross-env OMRS_OFFLINE=\"enable\" NODE_ENV=\"development\" webpack --mode development",
    "build:cypress-fixtures": "cd cypress/fixtures/ && webpack build",
    "build": "npm run build:production && npm run build:development",
    "analyze": "webpack --mode=production --env analyze=true",
    "watch": "webpack serve --mode development",
    "lint": "eslint src --ext ts,tsx",
    "version": "yarn add @openmrs/esm-framework@$npm_package_version --exact"
  },
  "keywords": [
    "openmrs",
    "microfrontends"
  ],
  "browserslist": [
    "extends browserslist-config-openmrs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openmrs/openmrs-esm-core.git"
  },
  "bugs": {
    "url": "https://github.com/openmrs/openmrs-esm-core/issues"
  },
  "homepage": "https://github.com/openmrs/openmrs-esm-core#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@carbon/react": "^1.8.0",
    "@openmrs/esm-framework": "4.0.0",
    "dayjs": "^1.10.4",
    "dexie": "^3.0.3",
    "i18next": "^19.6.0",
    "i18next-browser-languagedetector": "^4.3.1",
    "i18next-http-backend": "^1.0.21",
    "i18next-icu": "^1.4.2",
    "import-map-overrides": "^3.0.0",
    "lodash-es": "4.17.21",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-i18next": "^11.7.0",
    "react-router-dom": "^6.3.0",
    "rxjs": "^6.5.3",
    "single-spa": "^5.9.2",
    "systemjs": "^6.8.3",
    "workbox-core": "^6.1.5",
    "workbox-routing": "^6.1.5",
    "workbox-strategies": "^6.1.5",
    "workbox-window": "^6.1.5"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^5.11.1",
    "@openmrs/esm-devtools-app": "^4.0.0",
    "@openmrs/esm-implementer-tools-app": "^4.0.0",
    "@openmrs/esm-login-app": "^4.0.0",
    "@openmrs/esm-offline-tools-app": "^4.0.0",
    "@openmrs/esm-primary-navigation-app": "^4.0.0",
    "@testing-library/cypress": "^8.0.2",
    "ts-loader": "^9.3.0",
    "cypress": "^9.5.4",
    "start-server-and-test": "^1.14.0",
    "webpack-pwa-manifest": "^4.3.0",
    "workbox-webpack-plugin": "^6.1.2"
  }
}
